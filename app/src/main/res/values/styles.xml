<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/UWGold</item>
        <item name="android:colorPrimaryDark">@color/UWMetalGold</item>
        <item name="android:colorAccent">@color/UWLightGray</item>
        <item name="android:colorBackground">@color/UWPurple</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="LabelStyle" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="LabelStyle.Gold">
        <item name="android:background">?android:colorAccent</item>
        <item name="android:textColor">?android:colorBackground</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>
</resources>
